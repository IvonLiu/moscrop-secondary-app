<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Base.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary_indigo</item>
        <item name="colorPrimaryDark">@color/primary_dark_indigo</item>
        <item name="colorAccent">@color/accent_indigo</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="background_card">@drawable/background_card_light</item>
        <item name="title_card">@color/text</item>
        <item name="text_card">@color/card_light_text</item>
    </style>

    <style name="Theme.Base.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary_indigo_d</item>
        <item name="colorPrimaryDark">@color/primary_dark_indigo_d</item>
        <item name="colorAccent">@color/accent_indigo_d</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/dbackground</item>
        <item name="background_card">@drawable/background_card_black</item>
        <item name="title_card">@color/text</item>
        <item name="text_card">@color/card_black_text</item>
    </style>

    <!-- Don't touch these generally. They're only to allow for version
         specific attributes if needed -->

    <style name="Theme.Base.Light.Versioned" parent="Theme.Base.Light">
        <!-- Version specific attributes go here -->
    </style>

    <style name="Theme.Base.Dark.Versioned" parent="Theme.Base.Dark">
        <!-- Version specific attributes go here -->
    </style>

    <!-- Actual themes where stuff happens -->
    <style name="Theme.Light" parent="Theme.Base.Light.Versioned">
        <item name="android:windowBackground">@color/backgroundd</item>  <!-- I recommend using #fffafafa instead -->
        <item name="rss_background">@color/backgroundd</item>
        <item name="background_card">@drawable/background_card_light</item>
        <item name="card_picture_alpha">@string/card_picture_alpha</item>
        <item name="title_card">@color/text</item>
        <item name="text_card">@color/card_light_text</item>
        <item name="card_about">@drawable/selector_card_about</item>
        <item name="drawer_shadow">@drawable/drawer_shadow</item>

        <item name="text">@color/text</item>
        <item name="textt">@color/textt</item>
        <item name="texttt">@color/texttt</item>
        <item name="backgroundorig">@color/background</item>
        <item name="backgroundd">@color/backgroundd</item>
        <item name="backgrounddd">@color/backgrounddd</item>

        <!--navdrawer-->
        <item name="banner">@drawable/banner</item>
        <item name="drawer_icon_array">@array/drawer_icons_light</item>

        <item name="settings">@drawable/ic_action_settings_light</item>
        <item name="about">@drawable/ic_action_about_dev_light</item>
        <item name="contact">@drawable/ic_action_contact_light</item>
        <item name="drawer_divider">@drawable/divider_horizontal</item>
        <item name="nav_header_shadow">@drawable/shadow_drawer_header</item>
        <item name="nav_drawer_selector">@drawable/selector_nav_drawer_footer_light</item>
        <item name="background_nav">@color/backgroundd</item>
        <item name="avatar">@drawable/avatar</item>

        <!--banners-->
        <item name="credits_allan_banner">@drawable/credits_allan_banner</item>
        <item name="credits_ivon_banner">@drawable/credits_ivon_banner</item>
        <item name="credits_hazhir_banner">@drawable/credits_hazhir_banner</item>

        <!-- Toolbar stuff, move wherever you want
             then delete this comment -->
        <item name="toolbar_color">?attr/colorPrimary</item>

    </style>

    <style name="Theme.Black" parent="Theme.Base.Dark.Versioned">
        <item name="android:windowBackground">@color/dbackground</item>
        <item name="rss_background">@color/dbackground</item>
        <item name="background_card">@drawable/background_card_black</item>
        <item name="card_picture_alpha">@string/card_picture_alpha_d</item>
        <item name="title_card">@color/dtext</item>
        <item name="text_card">@color/card_black_text</item>
        <item name="card_about">@drawable/selector_card_about_d</item>
        <item name="drawer_shadow">@drawable/drawer_shadow_d</item>

        <item name="text">@color/dtext</item>
        <item name="textt">@color/dtextt</item>
        <item name="texttt">@color/dtexttt</item>
        <item name="backgroundorig">@color/dbackground</item>
        <item name="backgroundd">@color/dbackgroundd</item>
        <item name="backgrounddd">@color/dbackgrounddd</item>

        <!--navdrawer-->
        <item name="banner">@drawable/banner_dark</item>
        <item name="drawer_icon_array">@array/drawer_icons_dark</item>

        <item name="settings">@drawable/ic_action_settings_dark</item>
        <item name="about">@drawable/ic_action_about_dev_dark</item>
        <item name="contact">@drawable/ic_action_contact_dark</item>
        <item name="drawer_divider">@drawable/divider_horizontal_dark</item>
        <item name="nav_header_shadow">@drawable/shadow_drawer_header_dark</item>
        <item name="nav_drawer_selector">@drawable/selector_nav_drawer_footer_dark</item>
        <item name="background_nav">@color/dbackgroundd</item>
        <item name="avatar">@drawable/avatar_dark</item>

        <!-- Toolbar stuff, move wherever you want
             then delete this comment -->
        <item name="toolbar_color">?attr/colorPrimary</item>

        <!--banners-->
        <item name="credits_allan_banner">@drawable/credits_allan_banner_d</item>
        <item name="credits_ivon_banner">@drawable/credits_ivon_banner_d</item>
        <item name="credits_hazhir_banner">@drawable/credits_hazhir_banner_d</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.Base.Dark.Versioned">

        <!-- These attributes are what makes a "wallpaper" theme "wallpaper". -->
        <item name="android:windowBackground">@color/tdbackground</item>
        <item name="rss_background">@color/tbackground</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="drawer_shadow">@drawable/drawer_shadow_d</item>

        <!-- Other stuff -->
        <item name="background_card">@drawable/background_card_tblack</item>
        <item name="card_picture_alpha">@string/card_picture_alpha_t</item>
        <item name="title_card">@color/dtext</item>
        <item name="text_card">@color/card_black_text</item>
        <item name="card_about">@drawable/selector_card_about_t</item>

        <item name="colorPrimary">@color/primary_indigo_t</item>
        <item name="colorPrimaryDark">@color/primary_dark_indigo_t</item>
        <item name="colorAccent">@color/accent_indigo_t</item>

        <item name="text">@color/dtext</item>
        <item name="textt">@color/dtextt</item>
        <item name="texttt">@color/dtexttt</item>
        <item name="backgroundorig">@color/tdbackground</item>
        <item name="backgroundd">@color/tdbackgroundd</item>
        <item name="backgrounddd">@color/tdbackgrounddd</item>

        <!--navdrawer-->
        <item name="banner">@drawable/banner_dark</item>
        <item name="drawer_icon_array">@array/drawer_icons_dark</item>

        <item name="settings">@drawable/ic_action_settings_dark</item>
        <item name="about">@drawable/ic_action_about_dev_dark</item>
        <item name="contact">@drawable/ic_action_contact_dark</item>
        <item name="drawer_divider">@drawable/divider_horizontal_dark</item>
        <item name="nav_header_shadow">@drawable/shadow_drawer_header_dark</item>
        <item name="nav_drawer_selector">@drawable/selector_nav_drawer_footer_dark</item>
        <item name="background_nav">@color/tdbackground_nav</item>
        <item name="avatar">@drawable/avatar_dark</item>

        <!-- Toolbar stuff, move wherever you want
             then delete this comment -->
        <item name="toolbar_color">@color/primary_indigo_t_toolbar</item>

        <!--banners-->
        <item name="credits_allan_banner">@drawable/credits_allan_banner_t</item>
        <item name="credits_ivon_banner">@drawable/credits_ivon_banner_t</item>
        <item name="credits_hazhir_banner">@drawable/credits_hazhir_banner_t</item>
    </style>

</resources>
