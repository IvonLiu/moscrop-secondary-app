<resources 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="16">

    <style name="CardTitle" parent="@style/CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_large_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    
    <style name="CardText">
        <item name="android:textSize">@dimen/card_small_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- ActionBar title text -->
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="actionBarSize">@dimen/ab_height</item>
        <item name="android:actionBarSize">@dimen/ab_height</item>
        <item name="android:height">@dimen/ab_height</item>
        <item name="android:background">@color/text</item>
        <item name="android:titleTextStyle">@style/moscrop.ActionBar.Title</item>
        <item name="android:subtitleTextStyle">@style/moscrop.ActionBar.SubTitle</item>
    </style>

    <style name="moscrop.ActionBar.Title" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="moscrop.ActionBar.SubTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/textt</item>
    </style>

    <!-- NO NEED ANYMORE, I deleted the png as well -->
    <!--<style name="moscrop.ActionBar.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>-->

    <style name="TranslucentActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ic_actionbar_bg</item>
        <item name="background">@drawable/ic_actionbar_bg</item>
    </style>

    <!-- This is your Dialog Window popups. Changing the bg color will change the color of the window. -->
    <style name="the1dynasty.Dialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="moscrop.TransparentDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarItemBackground">@drawable/selector_white_transparent_ex</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/text</item>
    </style>

</resources>
