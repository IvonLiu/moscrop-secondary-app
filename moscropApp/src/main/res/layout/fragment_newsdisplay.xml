<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/fnd_title"
        style="@style/CardTitle"
        android:maxLines="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/text"/>
    
    <WebView
        android:id="@+id/fnd_webview"
        android:layout_below="@id/fnd_title"
        android:layout_marginLeft="@dimen/card_side_padding"
        android:layout_marginRight="@dimen/card_side_padding"
        android:layout_marginTop="@dimen/card_side_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
</RelativeLayout>    
