<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ExtendedCalendarView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tyczj.extendedcalendarview.ExtendedCalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="316dp"
            ExtendedCalendarView:backgroundColor="#FF0000FF"
            ExtendedCalendarView:titleTextColor="#FFFF0000"
            ExtendedCalendarView:dateTextColor="#FFFF00FF"
            ExtendedCalendarView:disabledTextColor="#FF00FFFF"
            ExtendedCalendarView:weekTextColor="#FFFF00FF"
            ExtendedCalendarView:titleBackgroundColor="#FF00FF00"/>

    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/daily_events_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
