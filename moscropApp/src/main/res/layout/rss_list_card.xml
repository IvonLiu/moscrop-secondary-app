<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="?attr/background_card">

    <ImageView
        android:id="@+id/CardBgImg"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.moscropsecondary.official.view.CircularImageView
        android:id="@+id/CardTagIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|left"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:border="true"
        app:border_color="@color/divider"
        app:border_width="1dp"/>

    <TextView
        android:id="@+id/rlc_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_gravity="bottom|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="?attr/title_card"/>

    <View
        android:id="@+id/rlc_divider"
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:background="@color/holo" />

    <TextView
        android:id="@+id/rlc_description"
        style="@style/CardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textStyle="italic"
        android:visibility="gone"
        android:textColor="?attr/title_card"/>

</FrameLayout>