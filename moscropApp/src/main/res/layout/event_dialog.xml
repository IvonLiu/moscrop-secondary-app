<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:id="@+id/view_event_duration_group"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration"
                style="@style/text_subhead_custom"/>

            <TextView
                android:id="@+id/view_event_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_body_2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_event_description_group"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                style="@style/text_subhead_custom"/>

            <TextView
                android:id="@+id/view_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_body_2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_event_location_group"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                style="@style/text_subhead_custom"/>

            <TextView
                android:id="@+id/view_event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_body_2"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>